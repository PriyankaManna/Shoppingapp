<p style="color: green"><%= notice %></p>
<%= link_to "New product", new_product_path %>
<div class="row">
  <div class="col-lg-8 pl-5">
    <h1>Products</h1>

    <div id="products">
      <% @products.each do |product| %>
        <%= render product %>
        <p>
          <%= link_to "Show this product", product ,class: 'btn btn-primary text-light'%>

          <% if @cart.include?(product) %>
            <%= button_to "Remove from cart", products_remove_from_cart_path(product),method: :delete ,class: 'btn btn-danger'%>
          <% else %>
            <%= button_to "Add to cart", products_add_to_cart_path(product) ,method: :post ,class: 'btn btn-success' %>
          <% end %>
        </p>
         </div>
        </div>
        
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 ">
    <h1>Your cart</h1>

    <% @cart.each do |item| %>
    <p> <%=item.name%> <%=item.price%> </p>
    <% end %> 
    <hr>
   <p> Total Price : <%= @cart.map(&:price).sum %> </p>
  </div>
</div>



